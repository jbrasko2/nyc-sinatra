<form method="post" action="/figures">
    <label for="name">Name </label>
    <input id="figure_name" type="text" name="figure[name]">
    <br>

    <h1>Titles</h1>
    <br>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>
    <% end %>
    <br>

    <h1>Create New Title: </h1>
    <input type="text" name="title[name]" id="new_title">
    <br>

    <h1>Landmarks</h1>
    <br>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br>
    <% end %>
    <br>

    <h1>Create New Landmark: </h1>
    <label for="new_landmark">Name: </label>
    <input id="new_landmark" type="text" name="landmark[name]">
    <label for="landmark_year">Year: </label>
    <input id="landmark_year" type="text" name="landmark[year_completed]">

    <input type="submit" value="Create New Figure">
</form>
    